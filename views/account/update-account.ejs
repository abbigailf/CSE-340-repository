<h1><%= title %></h1>

<%- messages() %>

<!-- Account Update Errors -->
<% if (errors && errors.array && errors.array().some(e => !e.param || e.param !== 'account_password')) { %>
    <ul class="errors">
        <% errors.array().forEach(error => { 
            if (!error.param || error.param !== 'account_password') { %>
                <li><%= error.msg %></li>
        <% } }) %>
    </ul>
<% } %>

<section class="account-update">
    <h2>Update Account Information</h2>
    <form action="/account/update" method="POST">
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required
            value="<%= accountData.account_firstname ? accountData.account_firstname : '' %>">

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required
            value="<%= accountData.account_lastname ? accountData.account_lastname : '' %>">

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required
            value="<%= accountData.account_email ? accountData.account_email : '' %>">

        <button type="submit">Update Account</button>
    </form>
</section>

<hr>

<!-- Password Update Errors -->
<% if (errors && errors.array && errors.array().some(e => e.param === 'account_password')) { %>
    <ul class="errors">
        <% errors.array().forEach(error => { 
            if (error.param === 'account_password') { %>
                <li><%= error.msg %></li>
        <% } }) %>
    </ul>
<% } %>

<section class="password-update">
    <h2>Change Password</h2>
    <p>Enter a new password to update your current password. Password must be at least 12 characters,
        include at least 1 uppercase letter, 1 number, and 1 special character.</p>
    <form action="/account/update-password" method="POST">
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

        <label for="account_password">New Password:</label>
        <input type="password" id="account_password" name="account_password" required
            placeholder="Enter new password">

        <button type="submit">Change Password</button>
    </form>
</section>

<p>
    <a href="/account/">Back to Account Management</a>
</p>


